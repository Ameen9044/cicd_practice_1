node { 
   def mvnHome = tool 'M3'
   def javaHome = tool 'java1.8'
   def dockerHome = tool 'MyDocker'
   checkoutProject()
   build() 
   dockerImage()
   pushtoAWS()
} 
def checkoutProject(){
   stage('Project code pull from Github'){
      echo "Pulling Code from Github"
      checkout([$class: 'GitSCM',branches:[[name:"master"]], doGenerateSubmoduleConfigurations: false, extensions: [[$class:'CloneOption', depth: 0, noTags: false, reference: '', shallow: false, timeout: 60]], gitTool: 'Default', submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/Ameen9044/cicd_practice_1.git' ]]])
     }
 }
def build() {
  stage('Maven Build'){
	echo "Build Step"
	def mvnHome = tool 'M3'
        def javaHome = tool 'java1.8'
	sh "JAVA_HOME=$javaHome $mvnHome/bin/mvn clean install"
        echo "This is maven build"
    }
}
def dockerImage()
{
  echo "Creating Docker Image"
  "/usr/local/bin/docker build -t hisoka_test_1 ."
}
def pushtoAWS () {
	stage ('Docker image push to AWS ECR') {
	dockerr="/usr/local/bin/docker"
	sh "/usr/local/bin/aws ecr get-login-password --region us-east-1 | @dockerr login --username AWS --password-stdin 527681342360.dkr.ecr.us-east-1.amazonaws.com"
	sh "$dockerr build -t hisoka_test_1 ."
	sh "$dockerr tag hisoka_test_1:latest 527681342360.dkr.ecr.us-east-1.amazonaws.com/hisoka_test_1:latest"
	sh "$dockerr push 527681342360.dkr.ecr.us-east-1.amazonaws.com/hisoka_test_1:latest"
	echo "Pushed Hisoka image to AWS ECR"
	
}
}
